<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Login</title>
    <script src="../../public/ts/login.component.ts"></script>
    <style>
      .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    background-color: #03256C;
  }
  
  .form {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #FFFFFF;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0px 0px 10px rgba(0,0,0,0.3);
    width: 100%;
    max-width: 400px;
  }
  
  .form input {
    padding: 10px;
    margin: 10px;
    border-radius: 5px;
    border: 1px solid #ccc;
    width: 100%;
    box-sizing: border-box;
  }
  
  .form button {
    background-color: #06BEE1;
    color: #FFFFFF;
    border: none;
    padding: 10px 20px;
    margin: 10px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    width: 100%;
    box-sizing: border-box;
  }
  
  .form button:hover {
    background-color: #1768AC;
  }
  
  h1 {
    margin-bottom: 30px;
    text-align: center;
    color: #03256C;
  }
  
  p {
    margin-top: 30px;
    text-align: center;
    color: #FFFFFF;
  }
  .logo {
    max-width: 200px;
    margin-bottom: 20px;
  }
    </style>
  </head>
  <body>
    <div class="container">
      <!-- <img class="logo" src="../../public/img/42MalagaWhite.png" alt="Logo 42">
      <img class="logo" src="../../public/img/Hicron_Primary_Logotype_RGB.jpg" alt="Logo Hicron"> -->
      <form class="form" method="POST" action="/login" (ngSubmit)="onSubmit()">
        <h1>Login</h1>
        <input type="email" name="email" placeholder="Email" [(ngModel)]="email" required>
        <input type="password" name="password" placeholder="Password" [(ngModel)]="password" required>
        <button type="submit">Login</button>
      </form>
      <p>Please enter your email and password</p>
    </div>     
  </body>
</html>
