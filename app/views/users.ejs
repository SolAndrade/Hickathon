<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>All Users</title>
  <style>
    /* Global styles */
    body {
      background-color: #FFFFFF;
      color: #03256C;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }
h1 {
  font-size: 2rem;
  margin: 2rem 0;
  text-align: center;
}

/* Table styles */
table {
  border-collapse: collapse;
  margin: 0 auto;
  width: 100%;
}

th, td {
  border: 1px solid #2541B2;
  padding: 1rem;
  text-align: left;
}

th {
  background-color: #06BEE1;
  color: #FFFFFF;
  font-weight: bold;
  text-transform: uppercase;
}

tr:nth-child(even) {
  background-color: #1768AC;
  color: #FFFFFF;
}

tr:nth-child(odd) {
  background-color: #FFFFFF;
}

/* Button styles */
button {
  background-color: #06BEE1;
  border: none;
  border-radius: 0.25rem;
  color: #FFFFFF;
  cursor: pointer;
  font-size: 1rem;
  padding: 0.5rem 1rem;
  transition: background-color 0.2s ease-in-out;
}

button:hover {
  background-color: #03256C;
}
</style>
</head>
<body>
  <h1>All Users</h1>
  <form action="/users/create" method="GET">
    <button>Add User</button>
  </form>
  <table>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Total Absence Days</th>
      <th>Actions</th>
    </tr>
    <% users.forEach(function(user) { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.total_absence_days %></td>
        <td>
          <form action="/users/<%= user.id %>/edit" method="GET">
            <button>Edit</button>
          </form>
          <form action="/users/<%= user.id %>/delete" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button>Delete</button>
          </form>
          
        </td>
      </tr>
    <% }); %>
  </table>
</body>
</html>
